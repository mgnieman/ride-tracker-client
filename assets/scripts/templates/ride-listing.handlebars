<table class="table">
  <thead>
    <tr>
      <th>Date</th>
      <th>Distance</th>
      <th>Duration</th>
      <th>Actions</th>
    </tr>
  </thead>
  <tbody>
    {{#each rides as |ride|}}

      <!-- {{> partial}}
      Don't uncomment yet -->

     <!-- Developers, why are we using data-id and not just id? -->
      <tr data-id="{{ride.id}}">
        <td>
          <small>{{ride.date}}</small>
        </td>
        <td>
          <small>{{ride.distance}}</small>
        </td>
        <td>
          <small>{{ride.duration}}</small>
        </td>
        <td>
          <button data-id="{{ride.id}}" class="deleteRideButton btn btn-default">Delete Ride</button>
          <button data-id="{{ride.id}}" class="updateRideButton btn btn-default">Edit Ride</button>
        <td>
      </tr>
    {{/each}}
</tbody>
